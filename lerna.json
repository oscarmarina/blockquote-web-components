{
  "version": "independent",
  "packages": [
    "packages/**/*"
  ],
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "version": {
      "ammend": true,
      "conventionalCommits": true,
      "conventionalGraduate": true,
      "message": "chore: publish"
    }
  },
  "ignoreChanges": [
    "**/demo/**",
    "**/test/**",
    "**/*.md",
    "**/*.config.js",
    "**/.*"
  ],
  "useNx": true,
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
